{
  "name": "coderscamp2020.project.fullstack-node-react.organizationapp",
  "version": "1.0.0",
  "description": "Organization Application - CodersCamp 2021 Node.js project",
  "main": "./Api/index.ts",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "format": "prettier --write \"Api/Src/**/*.js\" \"Api/Src/**/*.ts\" \"Api/Test/**/*.js\" \"Api/Test/**/*.ts\"",
    "start": "ts-node ./Api/index.ts",
    "start:dev": "npx nodemon ./Api/index.ts",
    "start:mail": "npx nodemon ./Api/UnitImplementations/MailingServiceTest.ts",
    "build": "parcel build ./Api/index.ts --public-url ./ --target node --bundle-node-modules --cache-dir ./Api/.cache -d ./Api/dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/KrystianKjjk/CodersCamp2020.Project.FullStack-Node-React.OrganizationApp.git"
  },
  "keywords": [
    "coderscamp",
    "organization",
    "node.js",
    "typescript",
    "frontend",
    "backend",
    "fullstack",
    "api",
    "rest",
    "mongodb",
    "database",
    "nosql"
  ],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/KrystianKjjk/CodersCamp2020.Project.FullStack-Node-React.OrganizationApp/issues"
  },
  "homepage": "https://github.com/KrystianKjjk/CodersCamp2020.Project.FullStack-Node-React.OrganizationApp#readme",
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@testing-library/dom": "^7.29.4",
    "@types/bcrypt": "^3.0.0",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.20",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/node": "^14.14.31",
    "jest": "^26.0.0",
    "jest-transform-stub": "^2.0.0",
    "nodemon": "^2.0.7",
    "parcel": "^1.12.4",
    "prettier": "^2.2.1",
    "sass": "^1.32.5",
    "ts-jest": "^26.4.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "testRegex": "(test|spec)\\.(jsx?|tsx?)$",
    "coverageDirectory": "../Coverage",
    "collectCoverageFrom": [
      "./Api/Src/Services/**"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "moduleNameMapper": {
      "\\.(png)$": "jest-transform-stub"
    },
    "testEnvironment": "node"
  },
  "dependencies": {
    "bcrypt": "^5.0.0",
    "body-parser": "^1.19.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "joi": "^17.4.0",
    "joi-password-complexity": "^5.1.0",
    "nodemailer": "^6.4.18",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "5.11.15",
    "nodemailer-express-handlebars": "^4.0.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  }
}
